<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffefefef">
    <ImageView android:id="@+id/calling_logo"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"/>
    <TextView android:id="@+id/calling_number"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="Welcome to jluo"
	    android:textSize="22sp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginTop="33dp"
        android:layout_width="fill_parent"
        android:layout_height="88dp">
        <ImageView 
	        android:id="@+id/calling_answer"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:scaleType="center"
	        android:paddingLeft="8dp"
	        android:paddingRight="8dp"
	        android:src="@drawable/phonea"
	        android:visibility="gone"/>
	    <ImageView 
	        android:id="@+id/calling_reject"
	        android:layout_width="28dp" 
	        android:layout_height="28dp" 
	        android:layout_centerHorizontal="true"
	        android:scaleType="centerInside"
	        android:src="@drawable/phoner"/>
    </RelativeLayout>
</LinearLayout>
